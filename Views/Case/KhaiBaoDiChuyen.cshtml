@model KhaiBaoDiChuyen
@{
    ViewData["Title"] = "KhaiBaoToanDan";
    SelectList countries = new SelectList(ViewBag.countries);
    SelectList cities = new SelectList(ViewBag.cities);
    List<string> gds = new List<string> { "Nam", "Nu", "Khac" };
    SelectList genders = new SelectList(gds);
}




<form action="KhaiBaoDiChuyen" method="post">
    <div class="h3 text-center">
        THÔNG TIN KHAI BÁO Y TẾ
    </div>

    <div class="h4 text-center">
        (PHÒNG CHỐNG DỊCH COVID-19)
    </div>

    <div class="h5 text-center text-danger">
        Khuyến cáo: Khai báo thông tin sai là vi phạm pháp luật Việt Nam và có thể xử lý hình sự
    </div>
    <div class="form-group">
        <div class="form-check">
            @* TODO khai_ho *@
            <input class="form-check-input" type="checkbox" asp-for="khai_ho">
            <label class="text-success h6" asp-for="khai_ho">
                Khai hộ
            </label>
        </div>
    </div>
    <div class="form-group form-row">
        <div class="col">
            <label>
                <b>Di chuyển trong nước</b>
            </label>        
        </div>
    </div>
    <div class="form-group form-row">
        <div class="col">
            <label asp-for="phuong_tien">
                Phương tiện đi lại
            </label>
            @* <input type="text" class="form-control" asp-for="phuong_tien"> *@
            <select name="cars" id="cars" class="form-control" asp-for="phuong_tien">
                <option value="May bay">Máy bay</option>
                <option value="Tau hoa">Tàu hỏa</option>
                <option value="Xe khach">Xe khách</option>
                <option value="Tau thuyen">Tàu thuyền</option>
                <option value="Ca nhan">Cá nhân</option>
            </select>
        </div>
        <div class="col">
            <input type="hidden" class="form-control">
        </div> 
    </div>
    <div class="form-group form-row">
        <div class="col">
            <label asp-for="noi_di">
                Nơi đi
            </label>
            <select class="form-control" asp-items="@cities" asp-for="noi_di"></select>
        </div>
        <div class="col">
            <label asp-for="noi_den">
                Nơi đến
            </label>
            <select class="form-control" asp-items="@cities" asp-for="noi_den"></select>
        </div>        
    </div>
     <div class="form-group form-row">
        <div class="col">
            <label asp-for="so_phuong_tien">
                Số phương tiện
            </label>
            <input type="text" class="form-control" asp-for="so_phuong_tien">
        </div>
        <div class="col">
            <label asp-for="noi_den">
                Số ghế
            </label>
            <input type="text" class="form-control" asp-for="so_ghe">
        </div>
        <div class="col">
            <label asp-for="noi_den">
                Ngày khởi hành
            </label>
            <input type="date" min="2020-01-01" class="form-control" asp-for="ngay_khoi_hanh">
        </div>         
    </div>
    <div class="form-group form-row">
        <div class="col">
            <label asp-for="ho_ten">
                Họ và tên (IN HOA)
            </label>
            @* TODO ho_ten *@
            <input type="text" class="form-control" asp-for="ho_ten">
        </div>
        <div class="col">
            <label asp-for="cmnd_cccd">
                CMND / CCCD
            </label>
            @* TODO cmnd_cccd *@
            <input type="text" class="form-control" asp-for="cmnd_cccd">
        </div>
    </div>
    <div class="form-group form-row">
        <div class="col">
            <label asp-for="nam_sinh">
                Năm sinh
            </label>
            @* TODO nam_sinh *@
            <input type="number" class="form-control" asp-for="nam_sinh">
        </div>
        <div class="col">
            <label asp-for="gioi_tinh">
                Giới tính
            </label>
            @* TODO gioi_tinh *@
            <select class="form-control" asp-items="@genders" asp-for="gioi_tinh"></select>
        </div>
        <div class="col">
            <label asp-for="quoc_tich">
                Quốc tịch
            </label>
            @* TODO quoc_tich *@
            <select class="form-control" asp-items="@countries" asp-for="quoc_tich"></select>
        </div>
    </div>
    <div class="form-group">
        <label class="h6">
           Địa chỉ liên lạc tại Việt Nam 
        </label>
    </div>
    <div class="form-group form-row">
        <div class="col-3">
            <label asp-for="tinh_thanh">
                Tỉnh thành
            </label>
            @* TODO tinh_thanh *@
            <select class="form-control" asp-items="@cities" asp-for="tinh_thanh"></select>
        </div>
        <div class="col">
            <label asp-for="dia_chi">
                Số nhà, phố, tổ dân phố/thôn/đội
            </label>
            @* TODO dia_chi *@
            <input type="text" class="form-control" asp-for="dia_chi">
        </div>
    </div>
    <div class="form-group form-row">
        <div class="col">
            <label asp-for="dien_thoai">
                Điện thoại
            </label>
            @* TODO dien_thoai *@
            <input type="text" class="form-control" asp-for="dien_thoai">
        </div>
        <div class="col">
            <label asp-for="email">
                Email
            </label>
            @* TODO email *@
            <input type="text" class="form-control" asp-for="email">
        </div>
    </div>
    <div class="form-group">
        <div class="form-check">
            @* TODO had_travel *@
            <input type="checkbox" class="form-check-input" asp-for="had_travel">
            <label class="h6" asp-for="had_travel">
                Trong vòng 14 ngày qua, Anh/chị có đến tỉnh/thành phố, quốc gia/vùng lãnh thổ nào(Có thể đi qua nhiều nơi).
            </label>
        </div>
    </div>
    <div class="form-group">
        <div class="form-check">
            @* TODO had_symptom *@
            <input type="checkbox" class="form-check-input" asp-for="had_symptom">
            <label class="h6" asp-for="had_symptom">
                Trong vòng 14 ngày qua, Anh/chị có thấy xuất hiện ít nhất một trong các dấu hiệu:sốt, ho, khó thở, viêm phổi, đau họng, mệt mỏi.
            </label>
        </div>
    </div>
    <div class="form-group">
        <div class="form-check">
            @* TODO had_contact_infected_suspected *@
            <input type="checkbox" class="form-check-input" asp-for="had_contact_infected_suspected">
            <label class="h6" asp-for="had_contact_infected_suspected">
                Trong vòng 14 ngày qua, Anh/Chị có tiếp xúc với người bệnh hoặc nghi ngờ, mắc bệnh COVID-19.
            </label>
        </div>
    </div>
    <button type="submit" class="btn btn-outline-primary form-control">Gửi</button>
</form>
<a class="btn btn-secondary d-flex justify-content-center" asp-controller="Home" asp-action="Index">
    Quay về trang chủ
</a>
